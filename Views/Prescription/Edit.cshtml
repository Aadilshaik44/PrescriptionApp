@model PrescriptionApp.Models.Prescription
@{
    string title = ViewBag.Action + " Prescription";
    ViewData["Title"] = title;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="MedicationName" class="form-label">Medication Name</label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FillStatus" class="form-label">Fill Status</label>
        <select asp-for="FillStatus" class="form-select">
            <option value="New" selected="@((Model.FillStatus == "New") ? "selected" : "")">New</option>
            <option value="Filled" selected="@((Model.FillStatus == "Filled") ? "selected" : "")">Filled</option>
            <option value="Pending" selected="@((Model.FillStatus == "Pending") ? "selected" : "")">Pending</option>
        </select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Cost</label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="mb-3">
    <label asp-for="RequestTime" class="form-label">Request Time</label>
    <input asp-for="RequestTime" class="form-control" type="datetime-local" readonly />
    </div>

    <input type="hidden" asp-for="PrescriptionId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
